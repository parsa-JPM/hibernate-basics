<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:./data/employee</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>
<!--        define entities-->
        <mapping class="ir.codefather.entities.EmployeeEntity"/>
        <mapping class="ir.codefather.entities.AccountEntity"/>
        <mapping class="ir.codefather.entities.Tag"/>
    </session-factory>
</hibernate-configuration>